{
    "name": "轻标签页",
    "description": "🚀 Lightweight Browser new tab extension | 一款轻量简洁的新标签页浏览器插件",
    "version": "1.0.2",
    "manifest_version": 2,
    "permissions": [
        "https://cn.bing.com/"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "browser_action": {
        "default_icon": "icons/logo-512.png",
        "default_title": "轻标签页"
    },
    "icons": {
        "48": "icons/logo-48.png",
        "64": "icons/logo-64.png",
        "128": "icons/logo-128.png",
        "512": "icons/logo-512.png"
    }
}